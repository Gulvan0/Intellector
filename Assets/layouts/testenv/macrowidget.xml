<vbox width="100%" height="50px">
    <hbox width="100%" height="24px">
        <button id="removeBtn" width="24px" height="24px" text="✖" style="padding:0 0 0 0;font-size:20px;font-color:#DD0000" />
        <button id="editBtn" width="24px" height="24px" text="✎" style="padding:0 0 0 0;font-size:20px" />
        <label id="macroNameLabel" width="100%" height="24px" style="font-size:21px" />
        <label id="macroStepLabel" width="100px" height="24px" style="font-size:21px;text-align:center" />
    </hbox>
    <hbox width="100%" height="24px">
        <label id="sliderPosLabel" width="80px" height="24px" style="font-size:21px;text-align:center" />
        <slider id="intervalSlider" width="100%" height="24px" min="100" max="5000" pos="500" />
        <button id="playBtn" width="24px" height="24px" text="▶" style="padding:0 0 0 0;font-size:20px" />
        <button id="stepBtn" width="24px" height="24px" text="⭲" style="padding:0 0 0 0;font-size:20px" />
    </hbox>
</vbox>