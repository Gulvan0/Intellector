<scrollview id="sv" width="100%" height="100%" contentWidth="100%">
    <style>
        #sv {
            border: 1px solid #aaaaaa;
            background-color: #f6f6f6;
            padding: 4px;
        }
        
        #sv .scrollview-contents {
            background-opacity: 0;
            padding: 0px;
            border: none;
        }
        
        #sv:active {
            border: 1px solid #aaaaaa;
        }

        #studiesList {
            border: none;
            background-opacity: 0;
        }

        #studiesList .listview-contents {
            spacing: 10px;
            background-opacity: 0;
        }

        #studiesList .even {
            background-opacity: 0;
        }

        #studiesList .even:hover {
            background-opacity: 0;
        }

        #studiesList .odd {
            background-opacity: 0;
        }

        #studiesList .odd:hover {
            background-opacity: 0;
        }

        #studiesList .listview-contents > .itemrenderer {
            padding: 0px;
        }

        #studiesList .listview-contents > .itemrenderer:selected {
            background-opacity: 0;
        }
    </style>
    <listview id="studiesList" width="100%" contentWidth="100%" selectionMode="disabled" />
    <button id="loadMoreBtn" text="${Dictionary.getPhrase(PROFILE_LOAD_MORE_BTN_TEXT)}" horizontalAlign="center"/>
</scrollview>