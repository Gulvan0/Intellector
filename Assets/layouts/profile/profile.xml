<component width="100%" height="100%">
    <vbox width="100%" height="100%">
        //Profile 
        //Friends
        <tabview id="tv7" width="100%" height="100%" style="font-size:22px;" styleName="full-width-buttons">
            <scrollview layoutName="vertical" width="100%" text="${Dictionary.getPhrase(PROFILE_GAMES_TAB_TITLE)}">
                <dropdown id="tcFiltersDropdown" width="250px" horizontalAlign="center">
                    <item-renderer layoutName="horizontal" width="100%">
                        <image id="icon" verticalAlign="center"/>
                        <vbox verticalAlign="center" style="spacing:0px">
                            <label id="tc" style="font-size: 20px;" />
                            <label id="games" style="color: #888888;" />
                            <label id="elo" style="color: #888888;" />
                        </vbox>
                    </item-renderer>
                </dropdown>
                <listview id="gamesList" width="100%">
                    <past-game-widget />
                </listview> 
                <button id="gamesLoadMoreBtn" text="${Dictionary.getPhrase(PROFILE_LOAD_MORE_BTN_TEXT)}" horizontalAlign="center" />
            </scrollview>
            <scrollview layoutName="vertical" width="100%" text="${Dictionary.getPhrase(PROFILE_STUDIES_TAB_TITLE)}">
                <listview id="studiesList" width="100%">
                    <study-widget />
                </listview> 
                <button id="studiesLoadMoreBtn" text="${Dictionary.getPhrase(PROFILE_LOAD_MORE_BTN_TEXT)}" horizontalAlign="center" />
            </scrollview>
            <scrollview layoutName="vertical" width="100%" text="${Dictionary.getPhrase(PROFILE_ONGOING_MATCHES_TAB_TITLE)}">
                <listview id="ongoingList" width="100%">
                    <past-game-widget />
                </listview> 
                <button id="ongoingReloadBtn" text="${Dictionary.getPhrase(PROFILE_RELOAD_BTN_TEXT)}" horizontalAlign="center" />
            </scrollview>
        </tabview>
    </vbox>
</component>