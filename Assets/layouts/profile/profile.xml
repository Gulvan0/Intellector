<component width="100%" height="100%">
    <style>
        #usernameLabel {
            font-size: 32px;
        }
        #rolesLabel {
            font-size: 28px;
            font-italic: true;
        }
        #statusLabel {
            font-size: 24px;
        }
        .quick-action-btn {
            width: 30px;
            height: 30px;
            background-color: yellow;
            background-opacity: 0;
            pointer-events: true;
        }
    </style>
    <vbox width="100%" height="100%">
        <hbox width="100%" height="150px">
            <vbox width="100%">
                <box id="userLabelBox" />
                <label id="rolesLabel" />
                <hbox>
                    <label id="statusLabel" verticalAlign="center" />
                    <image resource="assets/symbols/common/send.svg" verticalAlign="center" id="sendChallengeBtn" styleName="quick-action-btn" tooltip="${Dictionary.getPhrase(PROFILE_QUICK_ACTION_SEND_CHALLENGE_TOOLTIP)}" />
                    <image resource="assets/symbols/common/follow.svg" verticalAlign="center" id="followBtn" styleName="quick-action-btn" tooltip="${Dictionary.getPhrase(PROFILE_QUICK_ACTION_FOLLOW_TOOLTIP)}" />
                </hbox>
            </vbox>
            <spacer width="100%" />
            <vbox width="100%" height="100%">
                <hbox>

                </hbox>
                <spacer height="100%" />
                <hbox>
                    <image id="addFriendBtn" resource="assets/symbols/common/add_friend.svg" styleName="quick-action-btn" tooltip="${Dictionary.getPhrase(PROFILE_ACTION_ADD_FRIEND_TOOLTIP)}"  />
                    <image id="removeFriendBtn" resource="assets/symbols/common/remove_friend.svg" styleName="quick-action-btn" tooltip="${Dictionary.getPhrase(PROFILE_ACTION_REMOVE_FRIEND_TOOLTIP)}" />
                </hbox>
            </vbox>
        </hbox>
        <scrollview id="friendsSV" layoutName="horizontal" width="100%">
            <label text="${Dictionary.getPhrase(PROFILE_FRIENDS_PREPENDER)}" />
        </scrollview>
        <tabview id="tv7" width="100%" height="100%" style="font-size:22px;" styleName="full-width-buttons">
            <scrollview layoutName="vertical" width="100%" text="${Dictionary.getPhrase(PROFILE_GAMES_TAB_TITLE)}">
                <listview id="gamesList" width="100%">
                    <past-game-widget />
                </listview> 
                <button id="gamesLoadMoreBtn" text="${Dictionary.getPhrase(PROFILE_LOAD_MORE_BTN_TEXT)}" horizontalAlign="center" />
            </scrollview>
            <scrollview layoutName="vertical" width="100%" text="${Dictionary.getPhrase(PROFILE_STUDIES_TAB_TITLE)}">
                <listview id="studiesList" width="100%">
                    <study-widget />
                </listview> 
                <button id="studiesLoadMoreBtn" text="${Dictionary.getPhrase(PROFILE_LOAD_MORE_BTN_TEXT)}" horizontalAlign="center" />
            </scrollview>
            <scrollview layoutName="vertical" width="100%" text="${Dictionary.getPhrase(PROFILE_ONGOING_MATCHES_TAB_TITLE)}">
                <listview id="ongoingList" width="100%">
                    <past-game-widget />
                </listview> 
                <button id="ongoingReloadBtn" text="${Dictionary.getPhrase(PROFILE_RELOAD_BTN_TEXT)}" horizontalAlign="center" />
            </scrollview>
        </tabview>
    </vbox>
</component>