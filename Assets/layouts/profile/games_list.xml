<listview width="100%" height="100%" contentWidth="100%">
    <style>
        .listview {
            border: 1px solid #aaaaaa;
            background-color: #f6f6f6;
            padding: 4px;
        }

        .listview .listview-contents {
            spacing: 10px;
            background-opacity: 0;
        }

        .listview .even {
            background-opacity: 0;
        }

        .listview .even:hover {
            background-opacity: 0;
        }

        .listview .odd {
            background-opacity: 0;
        }

        .listview .odd:hover {
            background-opacity: 0;
        }

        .listview .listview-contents > .itemrenderer {
            padding: 0px;
        }
    </style>
</listview>