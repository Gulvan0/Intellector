<listview id="thisList" width="100%" height="100%" contentWidth="100%">
    <style>
        #thisList {
            border: 1px solid #aaaaaa;
            background-color: #f6f6f6;
            padding: 4px;
        }

        #thisList .listview-contents {
            spacing: 10px;
            background-opacity: 0;
        }

        #thisList .even {
            background-opacity: 0;
        }

        #thisList .even:hover {
            background-opacity: 0;
        }

        #thisList .odd {
            background-opacity: 0;
        }

        #thisList .odd:hover {
            background-opacity: 0;
        }

        #thisList .listview-contents > .itemrenderer {
            padding: 0px;
        }
    </style>
</listview>