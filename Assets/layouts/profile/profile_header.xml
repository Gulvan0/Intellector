<hbox width="100%" height="150px">
    <style>
        #rolesLabel {
            font-size: 28px;
            font-italic: true;
        }
        #statusLabel {
            font-size: 24px;
        }
        .quick-action-btn {
            width: 30px;
            height: 30px;
            background-color: yellow;
            background-opacity: 0;
            pointer-events: true;
        }
    </style>
    <vbox id="leftVBox" width="100%">
        <label id="rolesLabel" />
        <hbox>
            <label id="statusLabel" verticalAlign="center" />
            <image resource="assets/symbols/common/send.svg" verticalAlign="center" id="sendChallengeBtn" styleName="quick-action-btn" tooltip="${Dictionary.getPhrase(PROFILE_QUICK_ACTION_SEND_CHALLENGE_TOOLTIP)}" />
            <image resource="assets/symbols/common/follow.svg" verticalAlign="center" id="followBtn" styleName="quick-action-btn" tooltip="${Dictionary.getPhrase(PROFILE_QUICK_ACTION_FOLLOW_TOOLTIP)}" />
        </hbox>
    </vbox>
    <spacer width="100%" />
    <vbox width="100%" height="100%">
        <hbox>
        </hbox>
        <spacer height="100%" />
        <hbox>
            <image id="addFriendBtn" resource="assets/symbols/common/add_friend.svg" styleName="quick-action-btn" tooltip="${Dictionary.getPhrase(PROFILE_ACTION_ADD_FRIEND_TOOLTIP)}"  />
            <image id="removeFriendBtn" resource="assets/symbols/common/remove_friend.svg" styleName="quick-action-btn" tooltip="${Dictionary.getPhrase(PROFILE_ACTION_REMOVE_FRIEND_TOOLTIP)}" />
        </hbox>
    </vbox>
</hbox>