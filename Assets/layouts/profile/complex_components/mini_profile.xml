<dialog>
    <style>
        .mini-profile-button .icon {
            width: 25px;
            height: 25px;
        }
        #usernameLabel {
            font-size: 16px;
        }
        #statusLabel {
            font-size: 14px;
        }
    </style>
    <vbox id="contentsBox" width="100%">
        <label id="usernameLabel" />
        <label id="statusLabel" />
        <hbox id="elosBox" continuous="true" width="100%" />
        <hbox id="btnBar" horizontalAlign="right">
            <button id="followBtn" width="40px" icon="assets/images/profile/complex_components/follow.svg" tooltip="${Dictionary.getPhrase(MINIPROFILE_FOLLOW_BTN_TOOLTIP)}" styleName="mini-profile-button" />
            <button id="unfollowBtn" width="40px" icon="assets/images/profile/complex_components/unfollow.svg" tooltip="${Dictionary.getPhrase(MINIPROFILE_UNFOLLOW_BTN_TOOLTIP)}" styleName="mini-profile-button" />
            <button id="friendBtn" width="40px" icon="assets/images/profile/complex_components/friend.svg" tooltip="${Dictionary.getPhrase(MINIPROFILE_FRIEND_BTN_TOOLTIP)}" styleName="mini-profile-button" />
            <button id="unfriendBtn" width="40px" icon="assets/images/profile/complex_components/unfriend.svg" tooltip="${Dictionary.getPhrase(MINIPROFILE_UNFRIEND_BTN_TOOLTIP)}" styleName="mini-profile-button" />
            <button id="challengeBtn" width="40px" icon="assets/images/profile/complex_components/challenge.svg" tooltip="${Dictionary.getPhrase(MINIPROFILE_CHALLENGE_BTN_TOOLTIP)}" styleName="mini-profile-button" />
            <button id="toProfileBtn" width="40px" icon="assets/images/profile/complex_components/to_profile.svg" tooltip="${Dictionary.getPhrase(MINIPROFILE_TO_PROFILE_BTN_TOOLTIP)}" styleName="mini-profile-button" />
        </hbox>
    </vbox>
</dialog>