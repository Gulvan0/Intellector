<item-renderer width="100%" height="100%">
    <hbox width="100%" height="100%">
        <box id="boardContainer" width="50px" height="100%" />
        <vbox width="100%" height="100%">
            <hbox width="100%" height="20px">
                <scrollview id="tagsSV" layoutName="horizontal" width="100%" height="100%" >
                    <label text="${Dictionary.getPhrase(PROFILE_STUDY_TAGS_PREPENDER)}" verticalAlign="center" style="font-size: 10" />
                </scrollview>
                <arp-image id="editBtn" height="100%" resource="assets/symbols/common/edit.svg" tooltip="${Dictionary.getPhrase(PROFILE_STUDY_EDIT_BTN_TOOLTIP)}" verticalAlign="center" style="background-color:yellow;background-opacity:0;pointer-events:true" />
                <arp-image id="deleteBtn" height="100%" resource="assets/symbols/analysis/delete.svg" tooltip="${Dictionary.getPhrase(PROFILE_STUDY_REMOVE_BTN_TOOLTIP)}" verticalAlign="center" style="background-color:yellow;background-opacity:0;pointer-events:true" />
            </hbox>
            <label id="nameLabel" width="100%" style="font-align: center;font-size: 14" />
            <label id="descriptionLabel" width="100%" height="100%" style="font-align: center;font-size: 12" />
        </vbox>
    </hbox>
</item-renderer>