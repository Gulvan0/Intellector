<vbox width="600px" height="400px">
    <hbox width="100%" height="40px">
        <label id="title" text="${Dictionary.getPhrase(OPEN_CHALLENGES_TABLE_HEADER)}" style="font-size: 30px;font-name: 'fonts/FuturaItalic.ttf'" verticalAlign="bottom" />
        <spacer width="100%" />
        <button id="reloadBtn" icon="assets/symbols/main_menu/reload.svg" iconPosition="left" text="${Dictionary.getPhrase(TABLEVIEW_RELOAD_BTN_TEXT)}" height="100%" style="font-size: 20px" />
    </hbox>
    <tableview id="table" width="100%" height="100%" itemHeight="20px">
        <header width="100%" height="20px">
            <column id="mode" text="${Dictionary.getPhrase(TABLEVIEW_MODE_COLUMN_NAME)}" width="12%" />
            <column id="time" text="${Dictionary.getPhrase(TABLEVIEW_TIME_COLUMN_NAME)}" width="22%" />
            <column id="player" text="${Dictionary.getPhrase(TABLEVIEW_PLAYER_COLUMN_NAME)}" width="44%" style="text-align:center;" />
            <column id="bracket" text="${Dictionary.getPhrase(TABLEVIEW_BRACKET_COLUMN_NAME)}" width="22%" style="text-align:center;" />
        </header>
        
        <challenge-mode-renderer id="mode" />
        <time-control-renderer id="time" />
        
        <data>
        </data>
    </tableview>
</vbox>