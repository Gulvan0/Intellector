<component width="100%" height="100%">
    <vbox width="100%" height="100%" style="spacing: 10px">
        <button id="createGameBtn" text="${Dictionary.getPhrase(MAIN_MENU_CREATE_GAME_BTN_TEXT)}" horizontalAlign="center" style="font-size:40px;font-name:'fonts/Futura.ttf'" />
        <label id="changelogLabel" htmlText="${Changelog.getFirst()}" tooltip="${Dictionary.getPhrase(READ_FULL_CHANGELOG_TOOLTIP)}" style="font-size:26px;pointer-events:true;background-opacity:0;background-color:yellow" horizontalAlign="center" />
        <hbox horizontalAlign="center" width="90%" height="100%" style="spacing: 10vw" continuous="true">
            <vbox id="tablesBox" width="50%" height="100%">
                <open-challenges-table id="openChallengesTable" width="100%" height="50%" />
                <current-games-table id="currentGamesTable" width="100%" height="50%" />
            </vbox>
            <past-games-list id="pastGamesList" ownerLogin="${null}" width="50%" height="100%" />
        </hbox>
    </vbox>
</component>