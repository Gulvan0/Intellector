<component width="100%" height="100%">
    <vbox width="100%" height="100%">
        <vbox horizontalAlign="center">
            <label id="challengeByLabel" horizontalAlign="center" />
            <spacer id="firstSpacer" />
            <hbox id="descriptionHBox">
                <box id="tcIconBox" verticalAlign="center">
                    <image id="tcIcon" verticalAlign="center" horizontalAlign="center" />
                </box>
                <vbox verticalAlign="center">
                    <label id="tcLabel" />
                    <label id="bracketLabel" />
                    <label id="colorLabel" />
                </vbox>
            </hbox>
            <spacer id="secondSpacer" />
            <button id="acceptBtn" text="${Dictionary.getPhrase(OPENJOIN_ACCEPT_BTN_TEXT)}" horizontalAlign="center"/>
        </vbox>
    </vbox>
</component>