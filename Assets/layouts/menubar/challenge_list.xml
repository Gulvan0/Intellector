<menu width="350px">
    <stack id="stack" width="100%" height="30px">
        <style>
            #noChallengesLabel {
                font-size:14px;
                text-align:center;
                font-italic:true;
            }

            #actualList {
                background-color: #ffffff;
                padding: 0px;
            }

            #actualList .even {
                background-color: #fdfdfd;
            }

            #actualList .even:hover {
                background-color: #fdfdfd;
            }

            #actualList .odd {
                background-color: #efefef;
            }

            #actualList .odd:hover {
                background-color: #efefef;
            }

            #actualList .listview-contents > .itemrenderer {
                padding: 0px;
            }
        </style>
        <label id="noChallengesLabel" width="100%" text="${Dictionary.getPhrase(MENUBAR_CHALLENGES_NO_CHALLENGES_PLACEHOLDER)}" verticalAlign="center" />
        <listview id="actualList" width="100%" contentWidth="100%" height="100%" selectionMode="disabled">
            <challenge-entry-renderer />
        </listview>
    </stack>
</menu>