<hbox id="thisBox" width="100%" height="50px">
    <style>
        #thisBox {
            background-color: #ffffff;
        }
        #thisBox:hover {
            background-color: #dddddd;
        }
        #label {
            font-size: 28px;
            font-color: #666666;
            font-bold: true;
        }
    </style>
    <image id="incomingIcon" resource="assets/symbols/upper_menu/challenges/item_arrow_img/incoming.svg" width="45px" height="45px" verticalAlign="center" />
    <image id="outgoingIcon" resource="assets/symbols/upper_menu/challenges/item_arrow_img/outgoing.svg" width="45px" height="45px" verticalAlign="center" />
    <label width="100%" id="label" verticalAlign="center" />
    <button id="acceptBtn" verticalAlign="center" width="35px" height="35px" text="✓" style="padding-top:0px;padding-bottom:0px;padding-left:0px;padding-right:0px;text-align:center;font-size:24px;color: #1ace03"/>
    <button id="declineBtn" verticalAlign="center" width="35px" height="35px" text="✘" style="padding-top:0px;padding-bottom:0px;padding-left:0px;padding-right:0px;text-align:center;font-size:24px;color: #c80316"/>
    <button id="cancelBtn" verticalAlign="center" width="35px" height="35px" text="✖" style="padding-top:0px;padding-bottom:0px;padding-left:0px;padding-right:0px;text-align:center;font-size:24px;color: #666666"/>
</hbox>