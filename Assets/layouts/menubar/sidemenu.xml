<sidebar height="100%" position="left" method="float" modal="true">
    <style>
        .mobileMenuHeader {
            font-italic: true;
            margin-left: 10px;
            color: #666666;
        }
        .mobileMenuItem {
            margin-left: 30px;
            color: #666666;
            pointer-events:true;
            background-color: yellow;
            background-opacity: 0;
        }
        .mobileMenuItem:hover {
            color: #999999;
        }
        #siteName {
            pointer-events: true;
            white-space: nowrap;
            color: #333333;
            font-name: 'assets/fonts/Futura.ttf';
            font-weight: 600;
            background-color: yellow;
            background-opacity: 0;
        }

        #siteName:hover {
            color: #428fd8;
        }

        #mobileMenuButton {
            pointer-events: true;
            background-color: yellow;
            background-opacity: 0;
        }
    </style>
    <vbox style="spacing: 5px">
        <hbox>
            <image verticalAlign="center" resource="assets/symbols/upper_menu/open_sidebar_btn.svg" id="mobileMenuButton" onClick="hide();" />
            <label id="siteName" text="Intellector.info" verticalAlign="center" />
        </hbox>
        <spacer id="mainSpacer" />
        <label text="${Dictionary.getPhrase(MENUBAR_PLAY_MENU_TITLE)}" styleName="mobileMenuHeader" />
            <label id="createChallengeBtn" text="${Dictionary.getPhrase(MENUBAR_PLAY_MENU_CREATE_GAME_ITEM)}" styleName="mobileMenuItem" />
            <label id="openChallengesBtn" text="${Dictionary.getPhrase(MENUBAR_PLAY_MENU_OPEN_CHALLENGES_ITEM)}" styleName="mobileMenuItem" />
        <spacer styleName="sectionSpacer" />
        <label text="${Dictionary.getPhrase(MENUBAR_SPECTATE_MENU_TITLE)}" styleName="mobileMenuHeader" />
            <label id="currentGamesBtn" text="${Dictionary.getPhrase(MENUBAR_SPECTATE_MENU_CURRENT_GAMES_ITEM)}" styleName="mobileMenuItem" />
            <label id="watchPlayerBtn" text="${Dictionary.getPhrase(MENUBAR_SPECTATE_MENU_FOLLOW_PLAYER_ITEM)}" styleName="mobileMenuItem" />
        <spacer styleName="sectionSpacer" />
        <label text="${Dictionary.getPhrase(MENUBAR_LEARN_MENU_TITLE)}" styleName="mobileMenuHeader" />
            <label id="analysisBoardBtn" text="${Dictionary.getPhrase(MENUBAR_LEARN_MENU_ANALYSIS_BOARD_ITEM)}" styleName="mobileMenuItem" />
        <spacer styleName="sectionSpacer" />
        <label text="${Dictionary.getPhrase(MENUBAR_SOCIAL_MENU_TITLE)}" styleName="mobileMenuHeader" />
            <label id="playerProfileBtn" text="${Dictionary.getPhrase(MENUBAR_SOCIAL_MENU_PLAYER_PROFILE_ITEM)}" styleName="mobileMenuItem" />
            <label id="vkBtn" text="${Dictionary.getPhrase(MENUBAR_SOCIAL_MENU_VK_ITEM)}" styleName="mobileMenuItem" />
            <label id="discordBtn" text="${Dictionary.getPhrase(MENUBAR_SOCIAL_MENU_DISCORD_ITEM)}" styleName="mobileMenuItem" />
    </vbox>
</sidebar>