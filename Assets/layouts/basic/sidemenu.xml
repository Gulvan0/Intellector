<sidebar height="100%" position="left" method="float" modal="true">
    <style>
        .mobileMenuHeader {
            font-italic: true;
            margin-left: 10px;
            color: #666666;
        }
        .mobileMenuItem {
            margin-left: 30px;
            color: #666666;
            pointer-events:true;
            background-color: yellow;
            background-opacity: 0;
        }
        .mobileMenuItem:hover {
            color: #999999;
        }
        #siteName {
            pointer-events: true;
            white-space: nowrap;
            color: #333333;
            font-name: 'fonts/Futura.ttf';
            font-weight: 600;
            background-color: yellow;
            background-opacity: 0;
        }

        #siteName:hover {
            color: #428fd8;
        }

        #mobileMenuButton {
            pointer-events: true;
            background-color: yellow;
            background-opacity: 0;
        }
    </style>
    <vbox style="spacing: 5px">
        <hbox>
            <image verticalAlign="center" resource="assets/symbols/upper_menu/open_sidebar_btn.svg" id="mobileMenuButton" onClick="hide();" />
            <label id="siteName" text="Intellector.info" verticalAlign="center" />
        </hbox>
        <spacer id="mainSpacer" />
        <label text="Играть" styleName="mobileMenuHeader" />
            <label id="createChallengeBtn" text="Создать вызов" styleName="mobileMenuItem" />
            <label id="openChallengesBtn" text="Открытые вызовы" styleName="mobileMenuItem" />
        <spacer styleName="sectionSpacer" />
        <label text="Смотреть" styleName="mobileMenuHeader" />
            <label id="currentGamesBtn" text="Текущие партии" styleName="mobileMenuItem" />
            <label id="watchPlayerBtn" text="Наблюдать за игроком" styleName="mobileMenuItem" />
        <spacer styleName="sectionSpacer" />
        <label text="Учёба" styleName="mobileMenuHeader" />
            <label id="analysisBoardBtn" text="Доска анализа" styleName="mobileMenuItem" />
        <spacer styleName="sectionSpacer" />
        <label text="Сообщество" styleName="mobileMenuHeader" />
            <label id="playerProfileBtn" text="Профиль игрока" styleName="mobileMenuItem" />
    </vbox>
</sidebar>