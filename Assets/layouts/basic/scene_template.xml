<vbox width="100%" height="100%">
    <style>
        .menubar-button {
            font-weight: 300;
        }
        .menubar-button:hover {
            background-color: #eeeeee;
            color: #333333;
        }
        #siteName {
            pointer-events: true;
            white-space: nowrap;
            color: #333333;
            font-name: 'fonts/Futura.ttf';
            font-weight: 600;
            background-color: yellow;
            background-opacity: 0;
        }

        #siteName:hover {
            color: #428fd8;
        }

        #mobileMenuButton {
            pointer-events: true;
            background-color: yellow;
            background-opacity: 0;
        }

        .menubar-button .icon {
            width: 25px;
            height: 25px;
        }

        .menuitem-icon {
            width: 16px;
            height: 16px;
        }
    </style>
    <menubar id="menubar" width="100%" height="5%">
        <image verticalAlign="center" resource="assets/symbols/upper_menu/open_sidebar_btn.svg" id="mobileMenuButton" onClick="sidemenu.show();" />

        <label id="siteName" text="Intellector.info" verticalAlign="center" />

        <menu id="playMenu" text="Играть">
            <menuitem id="createChallengeBtn" text="Создать вызов" icon="assets/symbols/upper_menu/basic/new_game.svg" />
            <menuitem id="openChallengesBtn" text="Открытые вызовы" icon="assets/symbols/upper_menu/basic/open_challenges.svg" />
        </menu>

        <menu id="watchMenu" text="Смотреть">
            <menuitem id="currentGamesBtn" text="Текущие партии" icon="assets/symbols/upper_menu/basic/current_games.svg" />
            <menuitem id="watchPlayerBtn" text="Наблюдать за игроком" icon="assets/symbols/upper_menu/basic/watch_player.svg" />
        </menu>

        <menu id="learnMenu" text="Учёба">
            <menuitem id="analysisBoardBtn" text="Доска анализа" icon="assets/symbols/upper_menu/basic/analysis_board.svg" />
        </menu>

        <menu id="socialMenu" text="Сообщество">
            <menuitem id="playerProfileBtn" text="Профиль игрока" icon="assets/symbols/upper_menu/basic/player_profile.svg" />
        </menu>

        <spacer width="100%" />

        <menu id="challengesButton" icon="assets/symbols/upper_menu/challenges/button_icon/none.svg">
            <scrollview id="challengeList" width="100%" height="170px" contentLayoutName="vertical" contentWidth="100%" />
        </menu>

        <menu id="accountMenu">
            <menuitem id="logInBtn" text="Войти" icon="assets/symbols/upper_menu/account/log_in.svg" />
            <menuitem id="myProfileBtn" text="Мой профиль" icon="assets/symbols/upper_menu/account/my_profile.svg" />
            <menuitem id="settingsBtn" text="Настройки" icon="assets/symbols/upper_menu/account/settings.svg" />
            <menuitem id="logOutBtn" text="Выйти" icon="assets/symbols/upper_menu/account/log_out.svg" />
        </menu>
    </menubar>

    <box id="content" width="100%" height="95%" style="padding: 5 5 5 5"/>
</vbox>