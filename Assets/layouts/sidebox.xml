<vbox width="300px" verticalAlign="center">
    <clock id="blackClock" />
    <card id="blackLoginCard" style="background-color: #ffffff;padding-top:5px;padding-bottom:5px;padding-left:10px;padding-right:10px" width="100%">
        <label id="blackLoginLabel" text="player2" verticalAlign="center" horizontalAlign="center" style="font-size:24px" />
    </card>
    <movenavigator id="navigator"/>
    <vbox id="specialBox" width="100%" style="padding: 1 1 1 1">
        <actionbar id="actionBar" width="100%"/>
        <hbox id="drawRequestBox" width="100%" height="35px" hidden="true" style="background-color: #f7f7f7;border-bottom: 1;border-color: #dddddd;padding: 0 0 0 1;">
            <button id="declineDrawBtn" width="13.5%" height="100%" text="✘" style="padding-top:0px;padding-bottom:0px;padding-left:0px;padding-right:0px;text-align:center;font-size:24px;color: #c80316" horizontalAlign="left"/>
            <label width="73%" text="${Dictionary.getPhrase(DRAW_QUESTION_TEXT)}" style="font-style: italic;text-align:center;font-size:22px;color: #444444" horizontalAlign="center" verticalAlign="center"/>
            <button id="acceptDrawBtn" width="13.5%" height="100%" text="✓" style="padding-top:0px;padding-bottom:0px;padding-left:0px;padding-right:0px;text-align:center;font-size:24px;color: #1ace03" horizontalAlign="right"/>
        </hbox>  
        <hbox id="takebackRequestBox" width="100%" height="35px" hidden="true" style="background-color: #f7f7f7;border-bottom: 1;border-color: #dddddd;padding: 0 0 0 1;">
            <button id="declineTakebackBtn" width="13.5%" height="100%" text="✘" style="padding-top:0px;padding-bottom:0px;padding-left:0px;padding-right:0px;text-align:center;font-size:24px;color: #c80316" horizontalAlign="left"/>
            <label width="73%" text="${Dictionary.getPhrase(TAKEBACK_QUESTION_TEXT)}" style="font-style: italic;text-align:center;font-size:22px;color: #444444" horizontalAlign="center" verticalAlign="center"/>
            <button id="acceptTakebackBtn" width="13.5%" height="100%" text="✓" style="padding-top:0px;padding-bottom:0px;padding-left:0px;padding-right:0px;text-align:center;font-size:24px;color: #1ace03" horizontalAlign="right"/>
        </hbox>  
    </vbox>
    <card id="whiteLoginCard" style="background-color: #ffffff;padding-top:5px;padding-bottom:5px;padding-left:10px;padding-right:10px" width="100%">
        <label id="whiteLoginLabel" text="player1" verticalAlign="center" horizontalAlign="center" style="font-size:24px" />
    </card>
    <clock id="whiteClock" />
</vbox>