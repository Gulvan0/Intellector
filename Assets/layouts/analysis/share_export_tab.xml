<box width="100%" height="100%" text="${Dictionary.getPhrase(SHARE_EXPORT_TAB_NAME)}">
    <vbox width="100%" height="100%">
        <section-header  width="100%" text="${Dictionary.getPhrase(SHARE_EXPORT_AS_STUDY_HEADER)}" />
        <hbox width="100%">
            <label text="${Dictionary.getPhrase(SHARE_NAME_PREFIX_LABEL)}" verticalAlign="center" style="font-size:16px;font-bold:true" />
            <textfield id="nameInputField" width="100%" placeholder="${Dictionary.getPhrase(SHARE_STUDY_NAME_TEXTFIELD_PLACEHOLDER)}" /> 
        </hbox>
        <hbox horizontalAlign="center">
            <button id="exportNewBtn" text="${Dictionary.getPhrase(SHARE_EXPORT_NEW_BTN_TEXT)}" />
            <button id="overwriteBtn" text="${Dictionary.getPhrase(SHARE_OVERWRITE_BTN_TEXT_TEMPLATE)}" />
        </hbox>
        <section-header  width="100%" text="${Dictionary.getPhrase(SHARE_EXPORT_AS_QUESTION_MARKS_TEASER)}" />
        <label text="${Dictionary.getPhrase(SHARE_COMING_SOON)}" horizontalAlign="center" style="font-size:22px" />
    </vbox>
</box>