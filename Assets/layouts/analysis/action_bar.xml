<vbox width="100%" style="padding: 1 1 1 1">
    <style>
        #btnBar .button {
            border: 1 solid $normal-border-color;
        }

        #btnBar .button.first {
            border-left-size: 1;
            border-top-left-radius: 0.5;
            border-bottom-left-radius: 0.5;
        }

        #btnBar .button.last {
            border-top-right-radius: 0.5;
            border-bottom-right-radius: 0.5;
        }

        .analysis-actionbar-button .icon {
            width: 30px;
            height: 30px;
        }
    </style>
    <button-bar id="btnBar" width="100%" toggle="false">
        <button id="changeOrientationBtn" tooltip="${Dictionary.getPhrase(ANALYSIS_FLIP_BOARD_BTN_TOOLTIP)}" width="25%" height="36px" icon="assets/symbols/analysis/flip.svg" styleName="analysis-actionbar-button"/>
        <button id="editPositionBtn" tooltip="${Dictionary.getPhrase(ANALYSIS_SET_POSITION_BTN_TOOLTIP)}" width="25%" height="36px" icon="assets/symbols/common/edit.svg" styleName="analysis-actionbar-button"/>
        <button id="shareBtn" tooltip="${Dictionary.getPhrase(ANALYSIS_SHARE_BTN_TOOLTIP)}" width="25%" height="36px" icon="assets/symbols/common/share.svg" styleName="analysis-actionbar-button"/>
        <button id="playFromPosBtn" tooltip="${Dictionary.getPhrase(PLAY_FROM_POS_BTN_TOOLTIP)}" width="25%" height="36px" icon="assets/symbols/common/play_from_pos.svg" styleName="analysis-actionbar-button"/>
    </button-bar>
</vbox>