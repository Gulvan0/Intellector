<hbox width="100%" height="100%">
    <style>
        .normalModeBtn .icon {
            width: 50px;
            height: 50px;
        }
        .smallPieceModeBtn .icon {
            width: 35px;
            height: 35px;
        }
        .mediumPieceModeBtn .icon {
            width: 45px;
            height: 45px;
        }
    </style>
    <vbox id="positionEditor" width="100%" height="100%" hidden="true">
        <grid id="editModesGrid" columns="7" horizontalAlign="center">
            <button id="moveModeBtn" width="50px" height="50px" icon="Assets/symbols/analysis/move.svg" styleName="normalModeBtn" group="editModes" toggle="true" selected="true" />
            <button id="setProgWhiteModeBtn" width="50px" height="50px" icon="Assets/pieces/Progressor_White.svg" styleName="smallPieceModeBtn" group="editModes" toggle="true" />
            <button id="setAgrWhiteModeBtn" width="50px" height="50px" icon="Assets/pieces/Aggressor_White.svg" styleName="normalModeBtn" group="editModes" toggle="true" />
            <button id="setDefWhiteModeBtn" width="50px" height="50px" icon="Assets/pieces/Defensor_White.svg" styleName="mediumPieceModeBtn" group="editModes" toggle="true" />
            <button id="setLibWhiteModeBtn" width="50px" height="50px" icon="Assets/pieces/Liberaror_White.svg" styleName="mediumPieceModeBtn" group="editModes" toggle="true" />
            <button id="setDomWhiteModeBtn" width="50px" height="50px" icon="Assets/pieces/Dominator_White.svg" styleName="normalModeBtn" group="editModes" toggle="true" />
            <button id="setIntWhiteModeBtn" width="50px" height="50px" icon="Assets/pieces/Intellector_White.svg" styleName="normalModeBtn" group="editModes" toggle="true" />
            <button id="deleteModeBtn" width="50px" height="50px" icon="Assets/symbols/analysis/delete.svg" styleName="normalModeBtn" group="editModes" toggle="true" />
            <button id="setProgBlackModeBtn" width="50px" height="50px" icon="Assets/pieces/Progressor_Black.svg" styleName="smallPieceModeBtn" group="editModes" toggle="true" />
            <button id="setAgrBlackModeBtn" width="50px" height="50px" icon="Assets/pieces/Aggressor_Black.svg" styleName="normalModeBtn" group="editModes" toggle="true" />
            <button id="setDefBlackModeBtn" width="50px" height="50px" icon="Assets/pieces/Defensor_Black.svg" styleName="mediumPieceModeBtn" group="editModes" toggle="true" />
            <button id="setLibBlackModeBtn" width="50px" height="50px" icon="Assets/pieces/Liberaror_Black.svg" styleName="mediumPieceModeBtn" group="editModes" toggle="true" />
            <button id="setDomBlackModeBtn" width="50px" height="50px" icon="Assets/pieces/Dominator_Black.svg" styleName="normalModeBtn" group="editModes" toggle="true" />
            <button id="setIntBlackModeBtn" width="50px" height="50px" icon="Assets/pieces/Intellector_Black.svg" styleName="normalModeBtn" group="editModes" toggle="true" />
        </grid>
        <spacer height="10px" />
        <buttonbar width="100%" height="25px" toggle="false">
            <button id="clearBtn" icon="Assets/symbols/analysis/flush.svg" tooltip="Clear [P]" width="25%" height="100%" />
            <button id="resetBtn" icon="Assets/symbols/analysis/reset.svg" tooltip="Reset [P]" width="25%" height="100%" />
            <button id="startBtn" icon="Assets/symbols/analysis/initial.svg" tooltip="To Initial [P]" width="25%" height="100%" />
            <button id="orientationBtn" icon="Assets/symbols/analysis/flip.svg" tooltip="Flip Board [P]" width="25%" height="100%" />
        </buttonbar>
        <spacer height="10px" />
        <option-stepper id="turnColorStepper" width="100%">
            <data>
                <item text="White to Move [P]" />
                <item text="Black to Move [P]" />
            </data>
        </option-stepper>
        <spacer height="40px" />
        <label text="${Dictionary.getPhrase(FROM_SIP_LABEL)}" style="font-size:20px" />
        <hbox width="100%" height="20px">
            <textfield id="sipInputField" placeholder="Enter SIP... [P]" width="100%" height="100%" verticalAlign="center" />
            <button id="applySIPBtn" text="${Dictionary.getPhrase(ANALYSIS_APPLY)}" height="100%" verticalAlign="center" />
        </hbox>
        <spacer height="40px" />
        <hbox width="100%" height="20px">
            <button id="applyChangesBtn" text="${Dictionary.getPhrase(ANALYSIS_APPLY_CHANGES)}" width="50%" height="100%" verticalAlign="center" />
            <button id="discardChangesBtn" text="${Dictionary.getPhrase(ANALYSIS_DISCARD_CHANGES)}" width="50%" height="100%" verticalAlign="center" />
        </hbox>
    </vbox>
    <tabview id="controlTabs" width="100%" height="100%">
        <box text="${Dictionary.getPhrase(ANALYSIS_OVERVIEW_TAB_NAME)}" width="100%" height="100%">
            <movenavigator id="navigator" height="100%" />
            <analysisactionbar id="actionBar" width="100%" />
        </box>
        <box text="${Dictionary.getPhrase(ANALYSIS_BRANCHES_TAB_NAME)}" width="100%" height="100%">
            <vbox width="100%" height="100%">
                <hbox style="background-color:#AAAAAA" width="100%">
                    <image verticalAlign="center" resource="Assets/symbols/analysis/info-circle.svg" width="16px" height="16px" />
                    <link id="branchingHelpLink" verticalAlign="center" text="${Dictionary.getPhrase(BRANCHING_HELP_LINK)}" style="font-size:16px" />
                </hbox>
                <scrollview id="variantViewSV" width="100%" height="100%" />
            </vbox>
        </box>
        <box text="${Dictionary.getPhrase(ANALYSIS_OPENINGS_TAB_NAME)}" width="100%" height="100%">
            <label text="${Dictionary.getPhrase(ANALYSIS_OPENINGS_TEASER_TEXT)}" style="fontSize:20px" horizontalAlign="center" verticalAlign="center" />
        </box>
    </tabview>
</hbox>