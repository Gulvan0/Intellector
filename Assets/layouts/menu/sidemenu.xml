<sidebar height="100%" position="left" method="float" modal="true">
    <style>
        .mobileMenuHeader {
            font-italic: true;
            margin-left: 10px;
            color: #666666;
        }
        .mobileMenuItem {
            margin-left: 30px;
            color: #666666;
            pointer-events:true;
            background-color: yellow;
            background-opacity: 0;
        }
        .mobileMenuItem:hover {
            color: #999999;
        }
        #siteName {
            pointer-events: true;
            white-space: nowrap;
            color: #333333;
            font-name: 'assets/fonts/Futura.ttf';
            font-weight: 600;
            background-color: yellow;
            background-opacity: 0;
        }

        #siteName:hover {
            color: #428fd8;
        }

        #mobileMenuButton {
            pointer-events: true;
            background-color: yellow;
            background-opacity: 0;
        }
    </style>
    <vbox id="contentBox" style="spacing: 5px">
        <hbox>
            <image id="mobileMenuButton" verticalAlign="center" resource="assets/symbols/upper_menu/open_sidebar_btn.svg" />
            <label id="siteName" text="Intellector.info" verticalAlign="center" />
        </hbox>
        <spacer id="mainSpacer" />
    </vbox>
</sidebar>