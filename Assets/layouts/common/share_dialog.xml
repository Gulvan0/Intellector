<dialog width="50%" height="50%" title="${Dictionary.getPhrase(SHARE_DIALOG_TITLE)}">
    <style>
        .tool-button .icon {
            width: 30px;
            height: 30px;
        }
    </style>
    <tabview id="tabView" width="100%" height="100%" styleName="full-width-buttons">
        <box width="100%" height="100%" text="${Dictionary.getPhrase(SHARE_POSITION_TAB_NAME)}">
            <vbox width="100%" height="100%">
                <section-header  width="100%" text="${Dictionary.getPhrase(SHARE_SIP_HEADER)}" />
                <hbox width="100%">
                    <textfield id="sipTextField" width="100%" height="30px" verticalAlign="center" />
                    <button id="copySIPBtn" width="30px" height="30px" verticalAlign="center" tooltip="${Dictionary.getPhrase(COPY_BTN_TOOLTIP)}" icon="assets/symbols/common/copy.svg" styleName="tool-button" />
                    <button id="copySIPBtnTick" width="30px" height="30px" hidden="true" verticalAlign="center" tooltip="${Dictionary.getPhrase(COPY_BTN_SUCCESS_TOOLTIP)}" icon="assets/symbols/common/tick.svg" styleName="tool-button" />
                </hbox>
                <section-header width="100%" text="${Dictionary.getPhrase(SHARE_IMAGE_HEADER)}" />
                <box id="boardContainer" width="100%" height="100%" />
                <button id="downloadPNGBtn" text="${Dictionary.getPhrase(SHARE_DOWNLOAD_PNG_BTN_TEXT)}" horizontalAlign="center"/>
            </vbox>
        </box>
        <sharegametab id="shareGameTab" />
        <shareexporttab id="shareExportTab" />
    </tabview>
</dialog>