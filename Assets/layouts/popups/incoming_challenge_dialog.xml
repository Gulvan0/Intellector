<dialog title="${Dictionary.getPhrase(INCOMING_CHALLENGE_DIALOG_TITLE)}" width="350px">
    <style>
        .params-icon {
            background-color:yellow;
            background-opacity:0;
            pointer-events:true;
        }
    </style>
    <vbox width="100%">
        <autosizing-label id="challengeByLabel" width="100%" height="28px" style="text-align:center" />
        <spacer height="10px" />
        <box id="timeControlRowBox" height="28px" horizontalAlign="center" />
        <autosizing-label id="bracketLabel" height="24px" horizontalAlign="center" />
        <hbox id="paramsBox" height="24px" horizontalAlign="center">
            <autosizing-label id="paramsLabel" height="100%" text="${Dictionary.getPhrase(OPENJOIN_ESSENTIAL_PARAMS_LABEL_TEXT)}" />
            <arp-image id="colorIcon" height="100%" styleName="params-icon" />
            <arp-image id="customStartPosIcon" height="100%" styleName="params-icon" resource="assets/images/common/challenge_modes/custom.svg" />
        </hbox>
        <spacer height="10px" />
        <hbox horizontalAlign="center">
            <button id="acceptBtn" text="${Dictionary.getPhrase(INCOMING_CHALLENGE_ACCEPT_BTN_TEXT)}" horizontalAlign="center" />
            <button id="declineBtn" text="${Dictionary.getPhrase(INCOMING_CHALLENGE_DECLINE_BTN_TEXT)}" horizontalAlign="center" />
        </hbox>
    </vbox>
</dialog>