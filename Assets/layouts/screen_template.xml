<vbox width="100%" height="100%">
    <style>
        .menubar-button {
            font-size: 18;
            font-weight: 300;
        }
        .menubar-button:hover {
            background-color: $solid-background-color;
        }
        .menubar-button:active {
            background-color: $solid-background-color;
            color: $normal-text-color;
        }
        #siteName {
            pointer-events: true;
            padding-left: 10;
            padding-right: 10;
            white-space: nowrap;
            color: #333333;
            font-name: 'fonts/Futura.ttf';
            font-size: 30;
            font-weight: 600;
            background-color: yellow;
            background-opacity: 0;
        }

        #siteName:hover {
            color: #428fd8;
        }
    </style>
    <menubar id="menubar" width="100%" height="50px">
        <label id="siteName" text="intellector.info" verticalAlign="center" onClick="gfx.ScreenManager.toScreen(gfx.ScreenType.MainMenu);" />
    </menubar>
    <box id="content" width="100%" height="100%"/>
</vbox>